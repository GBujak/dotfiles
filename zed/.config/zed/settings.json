{
  "icon_theme": "Zed (Default)",
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  "base_keymap": "VSCode",
  "ui_font_size": 25,
  "ui_font_family": "Adwaita Sans",
  "buffer_font_size": 25,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },
  "vim_mode": true,
  "buffer_font_family": "Comic Code Ligatures",
  "relative_line_numbers": true,
  "buffer_line_height": { "custom": 1.5 },
  "toolbar": { "breadcrumbs": false, "quick_actions": false },
  "project_panel": { "entry_spacing": "standard" },
  "tabs": { "file_icons": true },
  "git": { "inline_blame": { "enabled": false } },
  "languages": {
    "Markdown": {
      "preferred_line_length": 80,
      "soft_wrap": "bounded"
    }
  }
}
